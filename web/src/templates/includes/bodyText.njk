                {% if module.isQuote %}
                    <div class="s:pl40 quoteWrap lh130 fadeltr" data-component="splitText">
                        {% for text in module.text.blockText %}
                            {{ text | blocksToHtml | safe }}
                        {% endfor %}
                    </div>
                {% else %}
                    <div class="fade fadeUp" data-component="reveal">
                        {% for text in module.text.blockText %}
                            {{ text | blocksToHtml | safe }}
                        {% endfor %}
                    </div>
                {% endif %}
                {% if module.isQuote %}
                    <p class="s:pl40 quote c-tan graphm ttu f10 s:f14 ls1em lh130 quoteBy" style="line-height:1;">
                        {{ module.byline }}
                    </p>
