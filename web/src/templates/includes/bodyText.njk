<div class="ph40 s:pr0 bodyText fg1 s:pl100 l:pl0 {% if section.isSticky %}s:pl160 l:pl0{% else %} {% endif %}">
    <div class="x ma df jce {% if module.isQuote %} l:pl240{% else %} pb100 s:pb160 l:pv160{% endif %}  pt40 s:pt120">
