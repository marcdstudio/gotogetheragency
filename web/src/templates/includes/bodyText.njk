                <div class="pb30 quotemark">
                    <img class="x" src="/assets/icons/quotemark.svg" alt="quote icon"/>
                </div>
            {% endif %}
            <div>
                {% if module.text.blockTitle %}
                    <h3 class="pb20 s:pb35 h2ttb graphm" data-component="splitText">{{ module.text.blockTitle }}</h3>
