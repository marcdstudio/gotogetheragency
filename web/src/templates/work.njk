---
layout: base.njk
title: Work
---

<div class="modules work full" data-router-view="default">
    <div class="eyeBtn usn dn l:db">
        <img class="x" src="/assets/icons/eye_mouse_cs.svg" alt="eye mouse icon"/>
    </div>
    <div class="cBtn usn dn l:db" data-component="magneticButton"></div>
    <div class="dn l:db pTitleWrap vh100 fix left top" style="width: 24rem;">
        {% for project in projects %}
            {% if loop.first %}
                <div class="pTitle top left abs x y df aic jcc" data-id="{{ project.slug.current }}" style="white-space:nowrap;">
                    <h3 class="r-90 c-tan" style="white-space:nowrap;">{{ project.title }}</h3>
                </div>
            {% else %}
                <div class="pTitle o0 top left abs x y df aic jcc" data-id="{{ project.slug.current }}" style="white-space:nowrap;">
                    <h3 class="r-90 c-tan" style="white-space:nowrap;">{{ project.title }}</h3>
                </div>
            {% endif %}
        {% endfor %}
    </div>
    <div class="scrollContainer x vh100 oy fix z3" data-component="smoothScroll">
        <div class="x ph20 s:ph30 l:ph0 thumbWrap rel pt100 s:pt180 l:pt0 pb60 s:pb70">
            {% for project in projects %}
                <div class="x mt20 s:mt30 l:mt40 workThumb oh fade rel bg-tan" data-id="{{ project.slug.current }}" data-component="reveal">
                    <img class="x o-cover" src="{{ project.image }}" alt="{{ project.altText }}"/>
                </div>
            {% endfor %}
        </div>
        {% include 'footer.njk' %}
    </div>

</div>
</div>